#!./yasl_linux

{
	"Args error\n" :0
	0: print
	1 exit
} arg_err

{
	"Must be >= to 0\n" :0
	0: print
	1 exit
} negative

{
	"Overflow value\n" :0
	0: print
} overflow

{
	1 :0
	0: - :0
} decrement

{
	// Call recursively if the factor if greater than 1
	0: = :0
	1 :0
	0: > ? (
		0: = :1
		1: * :1
		decrement
		recursive_fact
	)
} recursive_fact

// Check the `ac` value
2 :0
0: != ? arg_err

// Skip the `./yasl_fact`
0: !

// Atoi
0 :0
0: - :0

// Check the `av` value
0: = :0
0 :0
0: < ? negative

// Check overflow
0: = :0
20 :0
0: > ? overflow

// Setup Stacks
//  Stack:0 -> Store the current factor
//  Stack:1 -> Store the current value
"\n" :1
1 :1
recursive_fact
1: print
1: print
