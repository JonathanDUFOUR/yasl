#!./yasl_linux

{
	"Args error\n" :0
	0: print
	exit
}	arg_err

{
	"Must be >= to 0\n" :0
	0: print
	exit
}	negative

{
	"Overflow value\n" :0
	0: print
	exit
}	overflow

{
	1 :1
	1: - :1
}	decrement

{
	decrement
	1: = :3 // factor 50  -> $3
	3: * :3 // 50 * 50 -> $3
	3: = :0
	3: = :3
}	loop

{
	2: = :1
	2: = :3 // init 50 -> $3

	# :3
	3: @loop
	0: !
	0: print
	"\n" :0
	0: print
}	factoriel

{
	2: = :2

	1 :0
	0 :2
	2: < ? negative : factoriel
	2: = :2
	20 :2
	2: > ? overflow
}	ft_exec

{
	0 :0
	0: - :2
	ft_exec
}	convert

2 :0
0: != ? arg_err : (! 0: convert)
